<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="362dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp">

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp">

            <com.example.administrator.baidumusic.music.recommend.todaymusic.CircleImageView
                android:id="@+id/iv_today_music"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher" />

            <com.example.administrator.baidumusic.music.recommend.todaymusic.CircleImageView
                android:id="@+id/iv_today_music_play"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_mymusic_play_normal" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_today_music_play"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/colorTextBlack"
                android:ellipsize="end"
                android:lines="1" />

            <TextView
                android:id="@+id/author_today_music_play"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/colorTextGray"
                android:ellipsize="end"
                android:lines="1" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_more_today_music"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent"
            android:src="@mipmap/bt_recsong_more_press"/>
    </LinearLayout>
</LinearLayout>
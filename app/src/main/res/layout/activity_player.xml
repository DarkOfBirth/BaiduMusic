<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="30dp"
    android:background="#ffffff"
    android:alpha="1"
    android:id="@+id/player_fl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6">

            <ImageView
                android:id="@+id/back_player"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:elevation="50dp"
                android:src="@mipmap/scenario_drive_back_icon_press" />

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_player"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/like_player"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@mipmap/bt_playpage_button_like_normal_new" />

                <ImageView
                    android:id="@+id/down_player"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@mipmap/bt_playpage_button_download_normal_new" />

                <ImageView
                    android:id="@+id/share_player"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@mipmap/bt_playpage_button_share_normal_new" />

                <ImageView
                    android:id="@+id/comment_player"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@mipmap/btn_comment_trends_pressed" />

                <ImageView
                    android:id="@+id/more_player"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@mipmap/bt_recsong_more_press" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/current_time_player"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                   android:text="00:00"
                    android:paddingLeft="5dp"

                    android:textColor="@color/colorTextBlack" />

                <SeekBar

                    android:id="@+id/seekBar_player"
                    android:layout_width="0dp"
                    android:layout_height="40dp"

                    android:layout_weight="1"
                    android:paddingLeft="5dp" />


                <TextView

                    android:id="@+id/total_time_player"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="00:00"
                    android:textColor="@color/colorTextBlack" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/circle_mode_player"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@mipmap/bt_playpage_random_normal_new" />

                <ImageView
                    android:id="@+id/previous_player"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@mipmap/bt_playpage_button_previous_normal_new" />

                <ImageView
                    android:id="@+id/play_pause_player"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:clickable="true"
                    android:src="@mipmap/bt_playpage_button_pause_normal_new" />

                <ImageView
                    android:id="@+id/next_player"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@mipmap/bt_playpage_button_next_normal_new" />

                <ImageView
                    android:id="@+id/list_player"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@mipmap/bt_playpage_button_list_normal_new" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
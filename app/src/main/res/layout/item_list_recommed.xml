<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

        <ImageView
            android:id="@+id/iv_item_list_recommed"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:scaleType="fitXY"

            android:src="@mipmap/ic_mymusic_picture_down_2"
            />


        <TextView
            android:id="@+id/tv_item_listnum_list_recommed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_item_list_recommed"
            android:textColor="#ffffff"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@mipmap/ic_lebo_listen"
            android:text="123"/>


    </RelativeLayout>

    <TextView

        android:id="@+id/tv_title_item_list_recommed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="沉淀记忆岁月的老歌"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>